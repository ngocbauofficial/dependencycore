@model UserModel
@using CreativeTim.Argon.DotNetCore.Free.Models.Cms
@{
    ViewData["Title"] = "Customer Add";
}
@section HeadScripts{
    <script src="~/js/angular/customerController.js" asp-append-version="true"></script>
}
<div class="panel panel-primary" data-collapsed="0">

    <div class="panel-heading">
        <div class="panel-title">
            {{'Customer.TitleAdd'|translate}}
        </div>

        <div class="panel-options">
            <a href="#sample-modal" data-toggle="modal" data-target="#sample-modal-dialog-1" class="bg"><i class="entypo-cog"></i></a>
            <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
            <a href="#" data-rel="reload"><i class="entypo-arrows-ccw"></i></a>
            <a href="#" data-rel="close"><i class="entypo-cancel"></i></a>
        </div>
    </div>

    <div class="panel-body">
        <button type="button" ng-click="AddConfirm()" class="btn btn-success">Add</button>
        <a href="/Customer" class="btn btn-default">Back</a>
        <form role="form" class="form-horizontal form-groups-bordered">

            <div class="form-group">
                <label for="Name" class="col-sm-3 control-label">{{'Customer.Name'|translate}}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="Name" id="Name" ng-model="Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">{{'Customer.Avatar'|translate}}</label>

                <div class="col-sm-5">

                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <input type="hidden">
                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;" data-trigger="fileinput">
                            <img src="" alt="...">
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 6px;"></div>
                        <div>
                            <span class="btn btn-white btn-file">
                                <span class="fileinput-new">Select image</span>
                                <span class="fileinput-exists">Change</span>
                                <input type="file" name="avatar" id="avatar" accept="image/*" ng-model="Avatar">
                            </span>
                            <a href="#" class="btn btn-orange fileinput-exists" data-dismiss="fileinput">Remove</a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="col-sm-3 control-label">{{'Customer.Email'|translate}}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="Email" id="Email" ng-model="Email" />

                </div>
            </div>

            <div class="form-group">
                <label for="Phone" class="col-sm-3 control-label">{{'Customer.Phone'|translate}}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="Phone" id="Phone" ng-model="Phone" />

                </div>
            </div>

            <div class="form-group">
                <label for="Address" class="col-sm-3 control-label">{{'Customer.Address'|translate}}</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="Address" id="Address" ng-model="Address" />
                </div>
            </div>
            <div class="form-group">
                <label for="Gender" class="col-sm-3 control-label">{{'Customer.Gender'|translate}}</label>
                <div class="col-sm-5">
                    <select name="Gender" id="Gender" class="form-control" ng-model="Gender">
                        <option value="true">{{'Customer.Male'|translate}}</option>
                        <option value="false">{{'Customer.Female'|translate}}</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">Company</label>

                <div class="col-sm-5">
                    <div class="input-group minimal">
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control", ng_model = "Company" })
                    </div>

                    <br>

                    <div class="input-group minimal">
                        @Html.TextBoxFor(x => x.Address1, new { @class = "form-control", ng_model = "Address1" })
                    </div>
                </div>
            </div>

        </form>

    </div>

</div>
